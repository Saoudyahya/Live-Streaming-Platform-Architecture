# =============================================================================
# Chat Service Environment Configuration
# =============================================================================

# =============================================================================
# DynamoDB Configuration
# =============================================================================

# DynamoDB endpoint (use local for development, comment out for production)
DYNAMODB_ENDPOINT=http://localhost:8000

# AWS Region
AWS_REGION=us-west-2

# AWS Credentials (for local development only)
AWS_ACCESS_KEY_ID=fakeAccessKeyId
AWS_SECRET_ACCESS_KEY=fakeSecretAccessKey

# DynamoDB Table Names
DYNAMODB_CHATROOM_TABLE=chatrooms
DYNAMODB_MESSAGE_TABLE=messages

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection details
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Server Configuration
# =============================================================================

# gRPC Server Port
GRPC_PORT=:8080

# HTTP Server Port (for WebSocket and health checks)
HTTP_PORT=:8081

# =============================================================================
# External Services
# =============================================================================

# User Service gRPC Address
USER_SERVICE_ADDRESS=localhost:8082

# =============================================================================
# Development Configuration
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable development mode features
DEV_MODE=true

# =============================================================================
# Production Overrides (uncomment and modify for production)
# =============================================================================

# For production, comment out DYNAMODB_ENDPOINT and set real AWS credentials
# AWS_ACCESS_KEY_ID=your_real_access_key
# AWS_SECRET_ACCESS_KEY=your_real_secret_key
# AWS_REGION=your_production_region

# Production Redis (if using external Redis)
# REDIS_ADDRESS=your-redis-host:6379
# REDIS_PASSWORD=your_redis_password

# Production table names (if different)
# DYNAMODB_CHATROOM_TABLE=prod_chatrooms
# DYNAMODB_MESSAGE_TABLE=prod_messages

# =============================================================================
# Optional Configuration
# =============================================================================

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# Maximum number of concurrent connections
MAX_CONNECTIONS=1000

# WebSocket message size limit (in bytes)
WS_MESSAGE_SIZE_LIMIT=1048576

# Rate limiting (requests per minute)
RATE_LIMIT=100