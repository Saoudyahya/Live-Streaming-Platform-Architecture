# streaming-server/config/srs.config
# COMPLETE WORKING SRS CONFIGURATION

listen              1935;
max_connections     1000;
daemon              off;
srs_log_tank        console;
srs_log_level       trace;

http_server {
    enabled         on;
    listen          8080;
    dir             ./objs/nginx/html;
    crossdomain     on;
}

http_api {
    enabled         on;
    listen          1985;
    crossdomain     on;
}

vhost __defaultVhost__ {
    enabled         on;

    # HLS settings
    hls {
        enabled         on;
        hls_path        ./objs/nginx/html;
        hls_fragment    2;
        hls_window      3;
        hls_m3u8_file   [stream].m3u8;
        hls_ts_file     [stream]-[seq].ts;
        hls_cleanup     on;
        hls_dispose     120;
        hls_wait_keyframe   on;
    }

    # THIS IS THE CRITICAL SECTION THAT WAS MISSING
    http_hooks {
        enabled         on;
        on_publish      http://host.docker.internal:8084/rtmp/auth;
        on_publish_done http://host.docker.internal:8084/rtmp/started;
        on_unpublish    http://host.docker.internal:8084/rtmp/ended;
        on_dvr          http://host.docker.internal:8084/rtmp/recorded;
    }

    # DVR settings
    dvr {
        enabled         on;
        dvr_path        ./objs/nginx/html/records/[app]/[stream].[timestamp].mp4;
        dvr_plan        session;
        dvr_duration    30;
        dvr_wait_keyframe   on;
    }

    # Performance settings
    tcp_nodelay     on;
    min_latency     on;

    play {
        gop_cache       off;
        queue_length    10;
        mw_latency      100;
    }

    publish {
        mr              off;
        mr_latency      350;
        firstpkt_timeout    20000;
        normal_timeout      5000;
    }
}